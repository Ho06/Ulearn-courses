@model ULearn.DataBase.Entites.Student

@{
    ViewData["Title"] = "StudentSignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="section-title mt-5 mb-5">
        <div class="row">
            <h3 class="title text-primary ">
                <i class="fas fa-users"></i>
                Sign In
            </h3>
        </div>

        <div class="row text-center text-warning">
            <h4 class="text-warning">
                Log in for registered students only
                <i class="fas fa-exclamation-triangle"></i>

            </h4>
        </div>
    </div>
    <div class="row mt-6 mb-6">
        <div class="col-md-6" style="background-color: #f8f9fa">
            <div>
                <h3 style="color: #007bff">
                    Welcome to our Site
                </h3>
                <p>
                    The website is considered the fastest and easiest way to communicate between users at any time, as the website services are available 24 hours a day through the internet

                </p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-danger" asp-validation-summary="All"></div>
            <form id="booking-form" name="booking-form" method="post" asp-action="StudentSignIn" asp-controller="Student">
                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" placeholder="User Name" asp-for="Email" class="form-control" required="">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="password" placeholder="Password" asp-for="Pass" class="form-control" required="">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group text-center">
                            <input id="yourText" type="submit" name="submit" value=" Sign In" class="btn btn-primary btn-block form-control">
                        </div>

                    </div>
                </div>
            </form>
            <!-- Job Form Validation-->

        </div>
    </div>
</div>


