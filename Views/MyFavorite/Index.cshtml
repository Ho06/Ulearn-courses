@model IEnumerable<ULearn.DataBase.Entites.LearningList>
@inject ULearn.BL.Interface.ICourseRep Course

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2">

    <!-- /.card-header -->
    <div class="col-md-8">
        <h3 class="mb-3"> list of courses </h3>
    </div>
    <div class="col-md-4">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Category</a></li>
            <li class="breadcrumb-item active">My List</li>
        </ol>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="card">
        <div class="card-header bg-cyan">
            <h3 class="card-title"> List </h3>
        </div>
        <div class="card-body p-0 mt-2 mb-2">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Course code</th>
                        <th> Course Name</th>
                        <th> Course Duration</th>
                        <th>Course Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    </tr>
                    @foreach (var subitem in item.LearnCrs)
                    {
                        <tr>
                            <td>@subitem.CrsId</td>
                            <td>
                                @foreach (var courseName in Course.GetNameById(subitem.CrsId))
                                {
                                    <p>@courseName</p>
                                }

                            </td>
                            <td>


                                @foreach (var CourseDuration in Course.GetDurationById(subitem.CrsId))
                                {
                                    <p>@CourseDuration</p>
                                }



                            </td>
                            <td>


                                @foreach (var CoursePrice in Course.GetPriceById(subitem.CrsId))
                                {
                                    <p>@CoursePrice</p>
                                }



                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}
<!-- /.card-body -->
